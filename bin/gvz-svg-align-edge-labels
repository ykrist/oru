#!/usr/bin/env python
from oru.viz import graphviz_svg_align_edge_labels

if __name__ == '__main__':
    import argparse
    p = argparse.ArgumentParser(description=""
    "Fixes edge labels in SVGs produced by Graphviz programs like dot and neato. Labels will be rotated to be parallel "
    "with their parent edge and positioned at the middle of the edge.")
    p.add_argument("input", help="Path to input SVG")
    p.add_argument("output", help="Path to output SVG.  If not supplied, override input SVG.", default=None, nargs='?')
    p.add_argument('-y', default=10, type=float,
                   help="Apply an additional offset of Y pixels to the edge label. Default is %(default)s.")
    args = p.parse_args()
    graphviz_svg_align_edge_labels(args.input, args.output, y_shift_px=args.y)
